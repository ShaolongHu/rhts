# Show differences since the last tag

if [ $# -gt 1 ]; then
	usage
	exit 1
fi

if [ $# == 1 ]; then
	pushd $1 > /dev/null
fi

CURRENT_TAG=`rhts-mk-get-current-tag`

if [ -d "CVS" ]; then
    cvs diff -r $CURRENT_TAG
fi

if svn info &> /dev/null; then
    echo "SVN not supported yet!"
    exit 1
fi

if git log -1 &>/dev/null; then
    git diff $CURRENT_TAG .
fi

if [ $# == 1 ]; then
	popd > /dev/null
fi
