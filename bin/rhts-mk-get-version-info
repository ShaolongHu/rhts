# determine the next available package tag for test package

# usage: get_version_info [-v | -r] [<rcs tag>] 

OPTION="$1"
TAG="$2"

# defaults
if [ -n "$TESTVERSION" ]; then
   VERSION="$TESTVERSION"
else
   VERSION="1.0"
fi
RELEASE="0"

if [ -n "$TAG" ]; then
   VERSION=`echo $TAG |  sed -e "s/.*-\([0-9_\.]*\)-\([0-9]*\)$/\1/" | sed -e 's/_/\./g'`
   RELEASE=`echo $TAG |  sed -e "s/.*-\([0-9]*\)$/\1/"`
fi


if [ "$OPTION" = "-v" ]; then
	echo $VERSION
fi

if [ "$OPTION" = "-r" ]; then
	echo $RELEASE
fi 

